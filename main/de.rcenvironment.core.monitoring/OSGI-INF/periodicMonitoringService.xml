<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="activate" deactivate="deactivate" name="Periodic Monitoring Service">
	<implementation class="de.rcenvironment.core.monitoring.common.impl.PeriodicMonitoringServiceImpl" />
	<reference
		interface="de.rcenvironment.core.configuration.ConfigurationService"
		bind="bindConfigurationService"
		name="Configuration Service"
		policy="dynamic" />
	<reference
		interface="de.rcenvironment.core.monitoring.common.spi.PeriodicMonitoringDataContributor"
		name="PeriodicMonitoringDataContributor"
		cardinality="0..n"
		policy="dynamic"
		bind="addContributor"
		unbind="removeContributor" />
</scr:component>
